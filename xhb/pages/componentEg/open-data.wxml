<!--pages/componentEg/open-data.wxml-->
<view class="flex">
  <text>用户头像：</text>
  <open-data type="userAvatarUrl"></open-data>
</view>
<view class="flex">
  <text>用户昵称：</text>
  <open-data type="userNickName"></open-data>
</view>
<view class="flex">
  <text>用户性别：</text>
  <open-data type="userGender" lang="zh_CN"></open-data>
</view>
<view class="flex">
  <text>用户所在城市：</text>
  <open-data type="userCity"></open-data>
</view>
<view class="flex">
  <text>用户所在省份：</text>
  <open-data type="userProvince"></open-data>
</view>
<view class="flex">
  <text>用户所在国家：</text>
  <open-data type="userCountry"></open-data>
</view>
<view class="flex">
  <text>用户语言：</text>
  <open-data type="userLanguage"></open-data>
</view>
<button open-type="share">分享</button>
<button bindtap="shareInfo">获取转发详细信息（包括open-gid）</button>
