
@import "../../lib/css/weui.wxss";
.container{
    padding: 10rpx;
}
.controls {
  position: absolute;
  bottom: 0%;
  width: 100%;
  height: 25px;
  /* display: flex; */
  overflow: hidden;
  text-align: center;
}
.controls:after{
    content: "";
    display: block;
    clear: both;
}
.play,
.pause,
.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  line-height: 25px;
}
cover-image.img {
  width: 25px;
  height: 25px;
  /* margin: 5px auto; */
}
.cover-view{
    width: auto;
    display: inline-block;
}
.play{
    float: left;
}
.pause{
    float: right;
}
.time{
